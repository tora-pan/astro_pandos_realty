---
import Button from "@ui/Button.astro";

// Content for the section title and subtitle
const title =
  'No More Real Estate Headaches<br /> Get started with <span class="font-medium text-teal-700">Pandos</span><span class="font-light text-slate-400">Realty</span>.';
const subTitle =
  "Discover how Pandos Realty can help you with your real estate needs and make the journey towards your dream home a breeze.";

// Call-to-action configuration for the primary button
const primaryCTA = { text: "Give Us A Call", href: "tel:8182684052" };
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 md:py-14 lg:px-8 lg:py-20"
>
  <div class="mx-auto mb-10 max-w-3xl text-center lg:mb-14">
    <h2
      class="text-balance text-4xl text-slate-800 sm:text-5xl"
    >
      <Fragment set:html={title} />
    </h2>
    <p class="text-lg\/8 mt-5 text-pretty text-slate-600">
      {subTitle}
    </p>
    <Button
      href={primaryCTA.href}
      variant="primary"
      className="mt-7 inline-flex border-none px-3.5!">{primaryCTA.text}</Button
    >
  </div>
</section>
